{{#section 'css'}}
<link rel="stylesheet" href="/assets/css/category.css"> {{/section}} {{#section 'js'}}
<script>
    $('#add').click(function () {
        $('#st').show(300);
    })
    $('#submit').click(function (event) {
        var txtID = $('#ID').val();
        var txtName = $('#Name').val();
        if (txtID === '' || txtName === '') {
            event.preventDefault();
        }
    })

</script> {{/section}}

<div style="text-align:center; font-size:40px; font-weight:bold; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">&nbspBrand List</div>
<br>
<br>
<div class="center-table">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>BrandID</th>
                <th>Brand Name</th>
                <th>Manipulation</th>
            </tr>
        </thead>
        {{#each Brands}}
        <tbody>
            <tr>
                <td>
                    {{brand_id}}
                </td>
                <td>
                    {{brand_name}}
                </td>
                <td>
                    <a href="brands/UpdateBrand/{{brand_id}}">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    &nbsp&nbsp&nbsp
                    <a href="brands/DelBrand/{{brand_id}}">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        </tbody>
        {{/each}}
    </table>
</div>
<div class="row text-center">
    <button id="add" class="btn btn-success" onclick="showst">
        <span class="glyphicon glyphicon-plus"></span>
        <b>Add new brand</b>
    </button>
</div>
<br>
<div class="row center-table" id="st" style="display:none">
    <form method="POST">
        <input type="text" id="ID" name="ID" placeholder="brand id" maxlength="3">
        <input type="text" id="Name" name="Name" placeholder="brand name" maxlength="30">
        <button id="submit" type="submit">Add</button>
    </form>
</div>