{{#section 'js'}}
<script>
    $('#submit').click(function (event) {
        var txtID = $('#ID').val();
        var txtName = $('#Name').val();
        var txtPrice = $('#Price').val();
        var txtBrand = $('#Brand').val();
        var txtColor = $('#Color').val();
        var txtStock = $('#Stock').val();
        var txtDescription = $('#Description').val();
        if (txtID === '' || txtName === '' || txtPrice === '' || txtBrand === '' || txtColor === '' || txtStock === '' || txtDescription === '' || isNaN(txtPrice) || isNaN(txtStock)) {
            event.preventDefault();
        }
    })
    var prBrand = $('#hid-brand').val();
    var prColor = $('#hid-color').val();
    $("#Brand").val(prBrand);
    $("#Color").val(prColor);
</script> {{/section}}
<div style="text-align:center; font-size:40px; font-weight:bold; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">&nbspEditing Product</div>
<br>
<br> {{#with Product}}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form method="POST">
            <div class="form-group">
                <label for="ID">
                    <strong>Product ID</strong>
                </label>
                <input type="text" class="form-control" id="ID" name="ID" value="{{p_id}}" readonly>
            </div>
            <div class="form-group">
                <label for="Name">
                    <strong>Product name</strong>
                </label>
                <input type="text" class="form-control" id="Name" name="Name" value="{{p_name}}">
            </div>
            <div class="form-group">
                <label for="Price">
                    <strong>Price</strong>
                </label>
                <input type="number" class="form-control" id="Price" name="Price" value="{{price}}">
            </div>
            <div class="form-group">
                <label for="Stock">
                    <strong>Stock</strong>
                </label>
                <input type="number" class="form-control" id="Stock" name="Stock" value="{{n_stock}}">
            </div>
            <div class="form-group">
                <label for="Description">
                    <strong>Description</strong>
                </label>
                <textarea class="form-control" rows="3" id="Description" name="Description">{{description}}</textarea>
            </div>
            <input type="text" id="hid-brand" value="{{brand}}" hidden>
            <input type="text" id="hid-color" value="{{color}}" hidden> {{/with}}
            <div class="form-group">
                <label for="Brand">
                    <strong>Brand</strong>
                </label>
                <select name="Brand" id="Brand" class="form-control">
                    {{#each Brands}}
                    <option value="{{brand_id}}">{{brand_name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="Color">
                    <strong>Color</strong>
                </label>
                <select name="Color" id="Color" class="form-control">
                    {{#each Colors}}
                    <option value="{{color_id}}">{{color_name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="text-center">
                <button class="btn btn-success" id="submit" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>