{{#section 'js'}}
<script>
    $('#submit').click(function (event) {
        var txtID = $('#ID').val();
        var txtName = $('#Name').val();
        if (txtID === '' || txtName === '') {
            event.preventDefault();
        }
    })
</script> {{/section}}
<div style="text-align:center; font-size:40px; font-weight:bold; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">&nbspEditing Color</div>
<br>
<br> {{#with Color}}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form method="POST">
            <div class="form-group">
                <label for="ID">
                    <strong>Color ID</strong>
                </label>
                <input type="text" class="form-control" id="ID" name="ID" value="{{color_id}}" readonly>
            </div>
            <div class="form-group">
                <label for="Name">
                    <strong>Color name</strong>
                </label>
                <input type="text" class="form-control" id="Name" name="Name" value="{{color_name}}" maxlength="10">
            </div>
            <div class="text-center">
                <button class="btn btn-success" id="submit" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>
{{/with}}