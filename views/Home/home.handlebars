{{#section 'js'}}
<script>
	$('.Addcart').click(function () {
		var name = $(this).data('proid');
		$('#txtgetname').val(name);
		$('#txtgetquantity').val(1);
		$('#formgetinfo').submit();
	})
</script> 
{{/section}}

